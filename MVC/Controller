import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

//Controller is the middle man between View and Model

public class Controller {

	private View theView;
	private Model theModel;
	
	public Controller(View theView, Model theModel){
		
		this.theView = theView;
		this.theModel = theModel;
		
		//Here we tell the View that when the button is pressed, it will add the numbers
		this.theView.addAddingListener(new AddingListener());
	}
	
	class AddingListener implements ActionListener {
		public void actionPerformed(ActionEvent arg0) {
			int firstNumber, secondNumber = 0;
			
			//This part tells the view whether numbers or something else was entered.
			try{
				firstNumber = theView.getFirstNumber();
				secondNumber = theView.getSecondNumber();
				
				theModel.addSomeNumbers(firstNumber, secondNumber);
				
				theView.setAddingSolution(theModel.getAddingValue());
			}
			
			catch(NumberFormatException ex){
				
				theView.displayErrorMessage("You need to enter two integers");
			}
		}
	}
}
